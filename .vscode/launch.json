{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Serverless",
            "cwd": "${workspaceFolder}/backend",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--inspect",
                "./node_modules/.bin/serverless",
                "offline",
                "-s",
                "${env:STAGE}"
            ],
            "outFiles": [
                "${workspaceFolder}/handler.js"
            ],
            "port": 9229,
            "sourceMaps": true,
            "args": [],
            "envFile": "${workspaceFolder}/backend/.env.dev"
        }
    ]
}