#!/bin/bash
set -euo pipefail

aws cloudformation deploy \
    --template-file "./stacks/eventbridge.yml" \
    --stack-name "event-bridge" \
    --no-fail-on-empty-changeset
echo "DONE: Create Stack"

echo "START: wait stack-create-complete"
aws cloudformation wait stack-create-complete --stack "event-bridge"
echo "DONE: wait stack-create-complete"