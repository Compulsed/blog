#!/bin/bash
set -euo pipefail

usage="USAGE: $(basename "$0")
where:
    -h | --help         show this help text"

while [ $# -gt 0 ]; do
    if [[ $1 =~ "--"* ]]; then
        case $1 in
            --help|-h) echo "$usage"; exit; ;;
        esac
    fi
  shift
done


# echo "Running ci test for stage: $STAGE"
./bin/deploy

./bin/remote

yarn knex migrate:latest --env "$STAGE"

knex seed:run

