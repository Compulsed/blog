#!/bin/bash
set -euo pipefail

usage="USAGE: $(basename "$0")
where:
    -h | --help         show this help text"

while [ $# -gt 0 ]; do
    if [[ $1 =~ "--"* ]]; then
        case $1 in
            --help|-h) echo "$usage"; exit; ;;
        esac
    fi
  shift
done

echo "Running serverless deployment for stack:"
chamber exec "$STACK" -- ./node_modules/.bin/sls deploy --stage "$STAGE" --region "$AWS_REGION" --verbose --aws-s3-accelerate
