{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Serverless",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--inspect",
                "./node_modules/.bin/serverless",
                "offline",
                "-s",
                "${env:STAGE}"
            ],
            "outFiles": [
                "${workspaceFolder}/handler.js"
            ],
            "port": 9229,
            "sourceMaps": true,
            "args": [],
            "envFile": "${workspaceFolder}/.secrets/.env.dev"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Function",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--inspect",
                "./node_modules/.bin/serverless",
                "invoke",
                "local",
                "-f",
                "pipelines",
                "--data",
                "{}",
                "-s",
                "${env:STAGE}"
            ],
            "outFiles": [
                "${workspaceFolder}/handler.js"
            ],
            "port": 9229,
            "sourceMaps": true,
            "args": [],
            "envFile": "${workspaceFolder}/.secrets/.env.dev"
        }
    ]
}